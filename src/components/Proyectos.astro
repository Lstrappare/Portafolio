---
const PROJECTS = [
    {
        title: 'Proyecto 1',
        description: 'Lorem ipsum dolor',
        link: '#',
        github: '#',
        image: 'https://via.placeholder.com/300x200',
        tags: ['HTML', 'CSS', 'JavaScript']
    }
]
---

{
    PROJECTS.map(({ title, description, link, github, image, tags }) => (
        <article> 
            <h3>{title}</h3>
            <p>{description}</p>
            <ul>
                {tags.map((tag) => ( 
                    <li>{tag}</li> 
